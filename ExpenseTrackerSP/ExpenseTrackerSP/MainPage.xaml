<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ExpenseTrackerSP"
             x:Class="ExpenseTrackerSP.MainPage">

	<StackLayout>
		 <!--Place new controls here-->
		<StackLayout Orientation="Horizontal">
			<Label Text="Amount:" 
           HorizontalOptions="Start"
				   VerticalOptions="Center"
				   FontSize="Medium"/>
			<Entry x:Name="amountEntry"
			   HorizontalOptions="FillAndExpand"
			   Placeholder="$0.00"
			   PlaceholderColor="Gray"
			   MaxLength="10"/>
		</StackLayout>

		<StackLayout Orientation="Horizontal">
			<Label Text="Category:" 
           HorizontalOptions="Start"
				   VerticalOptions="Center"
				   FontSize="Medium"/>
			<Picker x:Name="categoryPicker"
				HorizontalOptions="FillAndExpand"
				Title="Select Category"
				TextColor="Red"
				ItemsSource="{Binding Category}"
				ItemDisplayBinding="{Binding Name}"/>
		</StackLayout>
		<!--Include list of categories-->

		<Button Text="Submit"
				HorizontalOptions="Center"
				VerticalOptions="CenterAndExpand"
				Clicked="SubmitButton_Clicked"/>
		
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Button Text="History" FontSize="Micro"
					Grid.Column="1" 
					Clicked="NavigateButton_History"/>

			<Button Text="Alerts" FontSize="Micro"
					Grid.Column="3" 
					Clicked="ViewAlerts_Clicked"/>
		</Grid>
		
	</StackLayout>

</ContentPage>